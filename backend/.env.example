# MongoDB Database
MONGODB_URL=mongodb://localhost:27017
# For MongoDB Atlas (Production): mongodb+srv://username:password@cluster.mongodb.net/nexuslearn


# Groq API (Required for AI features)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Pinecone Vector Database (Required for semantic search)
# Get your API key from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# JWT Secret Key (Required for authentication)
# Generate a secure random string for production
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Google OAuth (Optional - only needed for Google Sign-In)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL (Required for production CORS)
# For local development, leave empty
# For production, set to your Vercel URL: https://your-app.vercel.app
FRONTEND_URL=
